package örnekler;

import java.util.Scanner;

public class MultiplyTwoFloatingPointNumbers {

//HOW TO MULTİPLY TWO FLOATİNG POİNT NUMBERS İN JAVA
	
	public static void main(String[] args) {
	
		try (Scanner scan = new Scanner(System.in)) {
			System.out.println("PLEASE ENTER TWO FLOATİNG-POİNT NUMBERS :");
			float num1= scan.nextFloat();
			float num2= scan.nextFloat();
			float sum= num1 + num2 ;
			
			float first=1.2f; //we have two floating point numbers are stored  in float variables "first" and "second". 
			float second=1.4f;//notice ! we used "f" after the numbers to store in float variables . otherwise they will be assigned type double.
			float newSum= first + second;
			
			System.out.println("SUM İS :" + sum);
			System.out.println("New Sum İs :" + newSum);
		}
		

	}

}
